{
	"name": "@discordjs/opus",
	"version": "0.1.0",
	"description": "Opus bindings for Node",
	"main": "lib/index.js",
	"types": "typings/index.d.ts",
	"author": "iCrawl <icrawltogo@gmail.com>",
	"license": "MIT",
	"scripts": {
		"install": "patch-package && node-pre-gyp install --fallback-to-build",
		"build": "node-pre-gyp build package",
		"lint": "eslint lib",
		"lint:fix": "eslint lib --fix"
	},
	"dependencies": {
		"node-addon-api": "^2.0.0",
		"node-pre-gyp": "^0.14.0",
		"postinstall-postinstall": "^2.1.0"
	},
	"devDependencies": {
		"eslint": "^6.8.0",
		"eslint-config-aqua": "^7.2.3",
		"node-gyp": "^6.1.0",
		"patch-package": "^6.2.2",
		"prism-media": "^1.2.1",
		"typescript": "^3.8.3"
	},
	"eslintConfig": {
		"extends": "aqua/node"
	},
	"binary": {
		"module_name": "opus",
		"module_path": "./prebuild/{node_abi}-{platform}-{arch}-{libc}/",
		"remote_path": "v{version}",
		"package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}-{libc}.tar.gz",
		"host": "https://github.com/discordjs/opus/releases/download/"
	}
}
