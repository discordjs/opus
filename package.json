{
	"name": "@discordjs/opus",
	"version": "0.10.0",
	"description": "Opus bindings for Node",
	"main": "lib/index.js",
	"types": "typings/index.d.ts",
	"author": "iCrawl <icrawltogo@gmail.com>",
	"license": "MIT",
	"scripts": {
		"install": "bun x node-pre-gyp install --fallback-to-build || node-pre-gyp install --fallback-to-build",
		"build": "bun x node-pre-gyp install build package || node-pre-gyp install build package",
		"lint": "prettier --check . && eslint lib --format=pretty",
		"lint:fix": "prettier --write . && eslint lib --fix --format=pretty",
		"test": "bun tests/test.js || node tests/test.js"
	},
	"keywords": [
		"native",
		"opus",
		"module",
		"c",
		"c++",
		"bindings",
		"binary"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/discordjs/opus.git"
	},
	"dependencies": {
		"@discordjs/node-pre-gyp": "^0.4.5",
		"node-addon-api": "^8.5.0"
	},
	"devDependencies": {
		"@types/node": "^25.0.0",
		"eslint": "^9.39.1",
		"eslint-config-neon": "^0.2.9",
		"eslint-formatter-pretty": "^7.0.0",
		"node-gyp": "^12.1.0",
		"prettier": "^3.7.4",
		"typescript": "~5.9.3"
	},
	"overrides": {
		"eslint-plugin-rxjs": "npm:@favware/skip-dependency@latest",
		"eslint-plugin-rxjs-angular": "npm:@favware/skip-dependency@latest",
		"eslint-plugin-typescript-sort-keys": "npm:@favware/skip-dependency@latest",
		"eslint-plugin-sonarjs": "npm:@favware/skip-dependency@latest",
		"eslint-plugin-vue": "npm:@favware/skip-dependency@latest"
	},
	"engines": {
		"node": ">=20"
	},
	"binary": {
		"module_name": "opus",
		"module_path": "./prebuild/{node_napi_label}-{platform}-{arch}-{libc}-{libc_version}/",
		"remote_path": "v{version}",
		"package_name": "{module_name}-v{version}-{node_napi_label}-{platform}-{arch}-{libc}-{libc_version}.tar.gz",
		"host": "https://github.com/discordjs/opus/releases/download/",
		"napi_versions": [
			3
		]
	}
}
